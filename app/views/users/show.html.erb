<p id="notice"><%= notice %></p>

<div class="page-header"><h1><%="#{@name} Posts & Requests"%></h1></div>

<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title"><%="#{@name} Requests" %></h3>
  </div>
  <div class="panel-body">
    <% if @requested_posts %>
      <% @requested_posts.each do |topic| %>
        <%= link_to "#{topic.name}", topic_path %><br>
      <% end %>
    <% end %>
  </div>
</div>

<div class="panel panel-warning">
  <div class="panel-heading">
    <h3 class="panel-title"><%="#{@name} Posts in Progress" %></h3>
  </div>
  <div class="panel-body">
    <% if @claimed_posts %>
      <% @completed_posts.each do |post| %>
        <%= link_to "#{post.topic.name}", topic_path(post.topic.id) %><br>
      <% end %>
    <% end %>
  </div>
</div>

<div class="panel panel-success">
  <div class="panel-heading">
    <h3 class="panel-title"><%="#{@name} Completed Posts" %></h3>
  </div>
  <div class="panel-body">
    <% if @completed_posts %>
      <% @completed_posts.each do |post| %>
        <%= link_to "#{post.topic.name}", topic_path(post.topic.id) %><br>
      <% end %>
    <% end %>
  </div>
</div>

<nav class="navbar navbar-default navbar-fixed-bottom">
  <ul class="nav navbar-nav">
    <% if logged_in? %>
      <li><%= link_to 'Request a new topic!', new_topic_path %></li>
      <li><%= link_to 'Back to All Topics', root_path %></li>
    <% end %>
  </ul>
</div>